# This is an example .env file for the Chat-relay bot.

# --- Twitch (chatbot & auth_server) ---
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_SCOPES=user:write:chat user:bot
TWITCH_TOKENS_FILE=twitch_tokens.json
TWITCH_BOT_TOKEN=
TWITCH_REFRESH_TOKEN=
TWITCH_TOKEN_EXPIRES_AT=

TWITCH_BROADCASTER_ID=
TWITCH_SENDER_ID=

# --- YouTube ---
YOUTUBE_API_KEY=
YOUTUBE_CHANNEL_ID=
YOUTUBE_CHANNEL_HANDLE=@
YOUTUBE_LIVE_CHAT_ID=AUTO
YOUTUBE_VIDEO_ID=
ENABLE_YT=true
ENABLE_KICK=true
KICK_CHANNEL=
YT_MIN_POLL_MS=10000

# --- Auth server (public URL til callback) ---
AUTH_BIND_HOST=127.0.0.1
AUTH_PUBLIC_BASE=https://twitch-auth.example.com
